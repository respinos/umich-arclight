<%# <div class="al-search-result-index-article d-flex flex-column"> %>
<%= content_tag(
      :div,
      '',
      class: 'al-search-result-index-article d-flex flex-column',
      data: {
        collapse: I18n.t('arclight.views.show.collapse'),
        expand: I18n.t('arclight.views.show.expand'),
        config: true,
        number_of_children: document.number_of_children,
        arclight: {
          path: search_catalog_path,
          name: document.collection_name,
          view: 'child_components',
          parent: document.reference,
          directparent: document.reference,
          childrencount: document.number_of_children,
          search_field: 'within_collection',
          per_page: '100'
        }
      }
  ) do %>

  <% counter = document_counter_with_offset(document_counter) %>

  <div class="d-flex align-items-center flex-nowrap gap-1" style="x-width: 100%">

    <div class="align-self-center">
      <% if document.is_checkbox_requestable? %>
        <%= render "aeon_request_checkbox", document: document, class: '', label_class: 'btn btn-outline-secondary btn-outline-request squat p-2' %>
      <% elsif true && document.children? %>
        <button data-toggle="collapse" data-target="#<%= document.id %>-collapsible-hierarchy" class="btn btn-outline-light" style="min-width: 2.875rem; min-height: 2.875rem;" type="button">
          <i class="text-dark far <%= show_expanded?(document) ? 'fa-minus-square' : 'fa-plus-square' %>"></i>
        </button>
      <% elsif false && document.children? %>
        <div class="al-toggle-children-container">
        <%= link_to(
          '',
          "##{document.id}-collapsible-hierarchy",
          class: "al-toggle-view-children #{!show_expanded?(document) ? 'collapsed' : ''}",
          'aria-label': t('arclight.hierarchy.view_all'),
            data: {
              toggle: 'collapse'
            }
          )
        %>
      </div>

      <% else %>
        <span style="padding: 0.375rem 0.75rem"><i class="text-black-50 far fa-circle"></i></span>
      <% end %>
    </div>

<% if false %>
<%# with the DCP2-250 work I don't think you'd _expand_ this child %>
    <div class=""> <%# how to handle ordering with an optional thing at the front? %>
      <% if document.is_checkbox_requestable? %>
        <%= render "aeon_request_checkbox", document: document, class: '', label_class: 'btn btn-outline-secondary btn-outline-request squat p-2' %>
      <% else %>
        <div style="height: 46px; width: 46px; border: 1px dotted goldenrod;"></div>
      <% end %>
    </div>
<% end %>

    <div class="d-flex" xclass="documentHeader d-flex order-1" data-document-id="<%= document.id %>">
      <h3 xclass="index_title document-title-heading">
        <!-- def link_to_document(doc, field_or_opts = nil, opts = { counter: nil }, url_options = { anchor: nil })-->
        <%= link_to_document(document, document_show_link_field(document), { counter: counter }, { anchor: "contents" }) %>
        <% if document.children? %>
          <span class="badge badge-pill badge-secondary al-number-of-children-badge"><%= document.number_of_children %> <%= t(:'um_arclight.views.index.number_of_components', count: document.number_of_children) %></span>
        <% end %>
        <%= content_tag('span', class: 'al-document-extent badge') do %>
          <%= document.extent %>
        <% end if document.extent %>
      </h3>
    </div>

    <div class="ml-auto" xclass="documentContent">
      <%= render_index_doc_actions document, wrapping_class: 'd-flex justify-content-end' %>
    </div>

  </div>


  <div class="row">
    <%= content_tag('div', class: 'al-document-highlight col') do %>
      <%= document.highlights.join('<br/>').html_safe %>
    <% end if document.highlights %>
  </div>

  <div class="row">
    <%= content_tag('div', class: 'al-document-creator col') do %>
      <%= document.creator %>
    <% end if document.creator %>
  </div>

  <div class="row">
    <%= content_tag('div', class: 'al-document-abstract-or-scope col') do %>
      <%= content_tag('div', 'data-arclight-truncate' => true) do %>
        <%= document.abstract_or_scope %>
      <% end %>
    <% end if document.abstract_or_scope %>
  </div>
<% end %>
<%# </div> %>
